    b{
        color:black;
    }
</style>

<h2>Cart Details</h2>
<br />
<table align="center">
    <tr>

        <th>
            Brand Name
        </th>
        <th>
            Product Name
        </th>
        <th>
            RAM Name
        </th>
        <th>
            ROM Name
        </th>
        <th>
            Quantity
        </th>
        <th>
            Price
        </th>
        <th>Remove From Cart</th>

    </tr>


    @foreach (Item item in (List<Item>)Session["cart"])
    {
        s = s + item.DisplayImage1.Price.Value * item.Quantity;

        <tr>

            <td>
                @item.DisplayImage1.BrandName
            </td>
            <td>
                @item.DisplayImage1.ProductName
            </td>
            <td>
                @item.DisplayImage1.RAMName
            </td>
            <td>
                @item.DisplayImage1.ROMName
            </td>
            <td>
                @item.Quantity
            </td>
            <td>
                @(item.DisplayImage1.Price *item.Quantity)
            </td>

            <td>
                @Html.ActionLink("Delete", "Delete", "ShoppingCart", new { SNO = item.DisplayImage1.SNo, Quantity = item.Quantity }, null)
            </td>
        </tr>





    }
</table>
<br />
<table>
    <tr>
        <th class="sum">
            <b> TOTAL = </b>
        </th>
        <th class="sum">
            <b>Rs @s /-</b>
        </th>
    </tr>
</table>

