@using MobileStoreApplication.Controllers;
@using MobileStoreApplication.Models.Home;

@{
    ViewBag.Title = "AddToCart";
}
@{decimal s = 0; }
@*<link href="~/Style/StyleSheet1.css" rel="stylesheet" />*@



<head>
</head>
<style>
    .sum 
 {
        font-size: larger;
        font-weight: bolder;
        color:black;
